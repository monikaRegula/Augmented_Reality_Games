<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:scrollbarThumbHorizontal="@drawable/ic_launcher_foreground">

    <Button
        android:id="@+id/chess"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="214dp"
        android:layout_height="43dp"
        android:background="@android:drawable/progress_horizontal"
        android:onClick="onChessClick"
        android:text="CHESS"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/whack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/whack"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:background="@android:drawable/progress_horizontal"
        android:onClick="onWhackClick"
        android:text="Whack this figure"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chess" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="217dp"
        android:layout_height="56dp"
        android:text="Choose Game"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/chess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>